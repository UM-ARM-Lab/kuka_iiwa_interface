<launch>
    <arg name="arm_command_gui" default="false"/>
    <!-- Note that changing these from the default requires matching changes in the Java code -->
    <arg name="left_arm_recv_url" default="udp://10.10.10.108:30002"/>
    <arg name="right_arm_recv_url" default="udp://10.10.10.108:30001"/>

    <arg name="model" default="$(find-pkg-share victor_description)/urdf/victor.urdf.xacro"/>

    <node pkg="robot_state_publisher" exec="robot_state_publisher" name="robot_state_publisher" namespace="victor">
        <param name="robot_description" value="$(command 'xacro $(var model)')"/>
    </node>
    <node pkg="victor_hardware" exec="joint_state_publisher.py" name="joint_state_publisher" namespace="victor"/>
    <include file="$(find-pkg-share victor_hardware)/launch/victor_lcm_bridge_core.launch.xml">
        <arg name="arm_command_gui" value="$(var arm_command_gui)"/>
        <arg name="left_arm_recv_url" value="$(var left_arm_recv_url)"/>
        <arg name="right_arm_recv_url" value="$(var right_arm_recv_url)"/>
    </include>
</launch>
